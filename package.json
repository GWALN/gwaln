    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "prettier": "^3.6.2",
    "remark-cli": "^12.0.1",
    "remark-lint-list-item-indent": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-stringify": "^11.0.0",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@gwaln/core",
    "build:cli": "npm run build --workspace=@gwaln/cli",
    "build:mcp": "npm run build --workspace=@gwaln/mcp",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev:cli": "tsx packages/cli/src/cli.ts",
    "dev:mcp": "tsx packages/mcp/src/mcp-server.ts",
    "format": "prettier --write \"**/*.ts\"",
    "lint:md": "remark . --quiet --frail",
    "format:md": "remark . --output --quiet"
  }
}
